<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_plan_order_form_view" model="ir.ui.view">
            <field name="name">sale.plan.order.form</field>
            <field name="model">sale.plan.order</field>
            <field name="arch" type="xml">
                <form string="Sale Plan" create="false" >
                    <header>
                        <field name="sent" invisible="1"/>
                        <button name="send_plan" type="object"
                                string="Send Plan" class="oe_highlight"
                                attrs="{'invisible':[('sent','!=',False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,approved"/>
                    </header>
                    <sheet >
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="quotation_id"/>
                                <field name="info"/>
                            </group>
                        </group>
                        <group>
                            <field name="partner_lines">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="status" readonly="1"/>
                                    <button string="Approve" icon="fa-check" name="check_approve" type="object"
                                            attrs="{'invisible':['|', ('status', '=', 'approved'), ('is_current_user', '=', False)]}"/>
                                    <button string="Refuse" icon="fa-times" name="check_refuse" type="object"
                                            attrs="{'invisible':['|', ('status', '=', 'refused'), ('is_current_user', '=', False)]}"/>
                                    <field name="is_current_user" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sale_plan_order_tree_view" model="ir.ui.view">
            <field name="name">sale.plan.order.tree</field>
            <field name="model">sale.plan.order</field>
            <field name="arch" type="xml">
                <tree string="Sale Plan">
                    <field name="name"/>
                    <field name="info"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
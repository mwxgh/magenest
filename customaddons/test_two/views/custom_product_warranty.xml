<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        FORM VIEW       -->
        <record id="custom_product_warranty_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.product.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="product_warranty" groups="test_two.group_advanced_sale"/>
                    <field name="date_start" groups="test_two.group_advanced_sale"/>
                    <field name="date_stop" groups="test_two.group_advanced_sale"/>
                </xpath>
            </field>
        </record>
<!--        TREE VIEW       -->
        <record id="product_warranty_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.template.view.tree.website_sale.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="product_warranty" groups="test_two.group_advanced_sale"/>
                    <field name="warranty_interval" groups="test_two.group_advanced_sale"/>
                </xpath>
            </field>
        </record>
<!--        FILTER      -->
        <record id="product_warranty_code_filter" model="ir.ui.view">
            <field name="name">custom.product.warranty.filter</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <separator/>
                    <filter string="Custom Product Warranty" name="warranty_interval"
                            domain="[('check_valid_warranty','=',True)]"/>
                    <separator/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>